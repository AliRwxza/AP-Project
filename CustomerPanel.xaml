    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Column="0">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#8EC3B0" Offset="0"/>
                    <GradientStop Color="#B9BBDF" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Grid Grid.Column="0">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" Foreground="#4682B4">Panel</TextBlock>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" Foreground="#4682B4" Margin="0 0 0 85">Customer</TextBlock>
        </Grid>
        <Grid Grid.Column="1" Background="#DDE7F2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Name="OrderDetailsButton" Style="{DynamicResource CustomerButton}" Margin="40 40 0 0" Grid.Column="0" Grid.Row="0" Click="OrderDetailsButton_Click">
                <StackPanel>
                    <TextBlock FontSize="28">Orders</TextBlock>
                    <TextBlock FontSize="28">Report</TextBlock>
                </StackPanel>
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0.8,1">
                        <GradientStop Color="#e0b1cb" Offset="0"/>
                        <GradientStop Color="#c8b6ff" Offset="0.9"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button Style="{DynamicResource CustomerButton2}" Grid.Column="1" Grid.Row="0" Margin="0 40 40 0">
                <StackPanel>
                    <TextBlock FontSize="28">Search</TextBlock>
                    <TextBlock FontSize="28">an Order</TextBlock>
                </StackPanel>
                <Button.Background>
                    <LinearGradientBrush StartPoint="0.8,0" EndPoint="0.15,1">
                        <GradientStop Color="#ffa69e" Offset="0"/>
                        <GradientStop Color="#c8b6ff" Offset="0.7"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button Style="{DynamicResource CustomerButton3}" Grid.Column="0" Grid.Row="1" Margin="40 0 0 40" FontSize="28" Content="Wallet">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,1" EndPoint="0.8,0">
                        <GradientStop Color="#f88dad" Offset="0"/>
                        <GradientStop Color="#c8b6ff" Offset="0.7"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button Style="{DynamicResource CustomerButton4}" Grid.Column="1" Grid.Row="1" Margin="0 0 40 40">
                <StackPanel>
                    <TextBlock FontSize="24">Set Username</TextBlock>
                    <TextBlock FontSize="24">or Passsword</TextBlock>
                </StackPanel>
                <Button.Background>
                    <LinearGradientBrush StartPoint="1,0.8" EndPoint="0.4,0">
                        <GradientStop Color="#ff97b7" Offset="0"/>
                        <GradientStop Color="#c8b6ff" Offset="0.8"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </Grid>
    </Grid>
</Window>
